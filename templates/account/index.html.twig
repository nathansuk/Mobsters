			<div class="virement-global">
				<div class="user-compte-2">
					<h1 style="margin-top: 0px;">Virements</h1>
				</div>
			<section style="text-align: center; margin-top: 5px;">
				<em>Intérêts : 5%</em>
				<div class="v-form-global">
					<div class="virement-form">
						{{ form_start(sendMoneyForm) }}
						{{ form_widget(sendMoneyForm) }}
						<button type="submit" class="send-virement">Envoyer l'argent</button>
						{{ form_end(sendMoneyForm) }}
					</div>
				</div>
			</section>
			</div>


				<div class="emprunts-global">
					<div class="user-compte-2">
						<h1 style="margin-top: 0px;">Emprunts</h1>
					</div>
				<section style="text-align: center;">
					<em>Demandez de l'argent, soyez raisonnable.</em>
					<div class="virement-form">
						{{ form_start(askEmpruntForm) }}
						{{ form_widget(askEmpruntForm) }}
						<button type="submit" class="send-virement">Envoyer ma demande</button>
						{{ form_end(askEmpruntForm) }}
					</div>
					
				</section>
				</div>
		</section>


		<section class="flex-center" style="text-align: center;">
			<div class="global-card-bank" style="width: 775px;">
				<div class="user-compte">
					<h1 style="margin-top: 0px;">Historique des actions</h1>
				</div>
				<img style="margin-top: 10px;" src="https://files.habboemotion.com/resources/images/icons/cash.gif">

				{% for transaction in lastTransactions|reverse %}
					<p>
						{{ transaction.date|date("d/m/Y") }} | Virement - Bénéficiaire :
						{{ transaction.receiver }}
						| Montant :
						{{ transaction.amount }}
						<img src="{{ asset('img/ls.png')}}">
					</p>
				{% endfor %}
			</div>

		</section>

